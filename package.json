{
  "name": "twrangler",
  "version": "0.0.0",
  "scripts": {
    "fix": "biome check --apply .",
    "build:cli": "pnpm --filter @twrangler/cli build && rm -rf dist && cp -r packages/cli/dist .",
    "build:core": "pnpm --filter @twrangler/core build",
    "build:schema": "pnpm --filter @twrangler/schema build",
    "build:self": "tsc",
    "build": "pnpm run build:schema && pnpm run build:core && pnpm run build:cli && pnpm run build:self",
    "bin": "./dist/bin"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "./dist/bin",
  "files": ["dist"],
  "packageManager": "pnpm@8.14.2",
  "dependencies": {
    "@twrangler/schema": "workspace:*"
  },
  "author": "Sor4chi <sorakawa0218@gmail.com> (https://github.com/sor4chi)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sor4chi/twrangler"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.4",
    "typescript": "^5.4.4",
    "vitest": "^1.4.0"
  }
}
